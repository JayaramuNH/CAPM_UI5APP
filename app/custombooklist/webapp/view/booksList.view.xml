<mvc:View controllerName="custom.booklist.custombooklist.controller.booksList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page id="page" title="{i18n>title}">

        <VBox id="_IDGenVBox">
            <tnt:ToolHeader id="shellLikeToolHeader" class="sapUiTinyMargin">
                <Button id="_IDGenButton" icon="sap-icon://menu2" type="Transparent" tooltip="Menu" press="onCollapseExpandPress">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData1" priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                <Image id="_IDGenImage" src="test-resources/sap/tnt/images/SAP_Logo.png" decorative="false" press="onLogoPressed" tooltip="SAP Logo" width="60px" height="30px">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData2" priority="NeverOverflow"/>
                    </layoutData>
                </Image>
                <Title text="PrÐ¾duct Name" wrapping="false" id="productName">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData3" priority="Disappear"/>
                    </layoutData>
                </Title>
                <Text text="Second title" wrapping="false" id="secondTitle">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData4" priority="Disappear"/>
                    </layoutData>
                </Text>
                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                <SearchField width="25rem" id="searchField">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData5" priority="Low" group="1"/>
                    </layoutData>
                </SearchField>
                <Button visible="false" icon="sap-icon://search" type="Transparent" id="searchButton" tooltip="Search"/>
                <OverflowToolbarButton id="_IDGenOverflowToolbarButton" icon="sap-icon://da" type="Transparent" tooltip="Joule" text="Joule">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData6" group="2"/>
                    </layoutData>
                </OverflowToolbarButton>
                <OverflowToolbarButton id="_IDGenOverflowToolbarButton1" icon="sap-icon://source-code" type="Transparent" tooltip="Action 1" text="Action 1">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData7" group="2"/>
                    </layoutData>
                </OverflowToolbarButton>
                <OverflowToolbarButton id="_IDGenOverflowToolbarButton2" icon="sap-icon://card" type="Transparent" tooltip="Action 2" text="Action 2">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData8" group="2"/>
                    </layoutData>
                </OverflowToolbarButton>
                <OverflowToolbarButton id="_IDGenOverflowToolbarButton3" icon="sap-icon://action-settings" type="Transparent" text="Settings"/>
                <Button id="_IDGenButton1" icon="sap-icon://bell" type="Transparent" tooltip="Notification">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData9" priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                <tnt:ToolHeaderUtilitySeparator id="_IDGenToolHeaderUtilitySeparator"/>
                <OverflowToolbarButton id="_IDGenOverflowToolbarButton4" icon="sap-icon://grid" type="Transparent" text="My Products" tooltip="My Products"/>
                <Avatar id="_IDGenAvatar" src="test-resources/sap/tnt/images/Woman_avatar_01.png" displaySize="XS" press=".onAvatarPressed" tooltip="Profile">
                    <layoutData>
                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData10" priority="NeverOverflow"/>
                    </layoutData>
                </Avatar>
            </tnt:ToolHeader>


            <!-- Side Navigation -->


            <HBox id="_IDGenHBox">
                <tnt:SideNavigation id="sideNavigation" selectedKey="walked" expanded="true">
                    <tnt:NavigationList id="_IDGenNavigationList1">
                        <tnt:NavigationListItem id="_IDGenNavigationListItem" text="Home" icon="sap-icon://home" />
                        <tnt:NavigationListGroup id="_IDGenNavigationListGroup" text="New">
                            <tnt:NavigationListItem id="_IDGenNavigationListItem1" text="Add Books" icon="sap-icon://people-connected" press=".onAddBookPressed"/>
                            <tnt:NavigationListItem id="_IDGenNavigatioacascfnListItem12" text="view Books" icon="sap-icon://people-connected" press=".onViewBookPressed"/>
                            <tnt:NavigationListItem id="_IDGenNavigationListItem2" text="Building" icon="sap-icon://building">
                                <tnt:NavigationListItem id="_IDGenNavigationListItem3" text="Office 01" />
                                <tnt:NavigationListItem id="_IDGenNavigationListItem4" text="Office 02" />
                            </tnt:NavigationListItem>
                            <tnt:NavigationListItem id="_IDGenNavigationListItem5" text="Mileage" icon="sap-icon://mileage">
                                <tnt:NavigationListItem id="_IDGenNavigationListItem6" text="Driven" />
                                <tnt:NavigationListItem text="Walked" id="walked" />
                            </tnt:NavigationListItem>
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListGroup id="_IDGenNavigationListGroup1" text="Recently used">
                            <tnt:NavigationListItem id="_IDGenNavigationListItem7" text="Managing My Area" icon="sap-icon://kpi-managing-my-area" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem8" text="Flight" icon="sap-icon://flight" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem9" text="Map" icon="sap-icon://map-2" />
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListGroup id="_IDGenNavigationListGroup2" text="Restricted" enabled="false">
                            <tnt:NavigationListItem id="_IDGenNavigationListItem10" text="Running" icon="sap-icon://physical-activity" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem11" text="Scissors" icon="sap-icon://scissors" />
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem12" text="Transport" icon="sap-icon://passenger-train" />
                    </tnt:NavigationList>
                    <tnt:fixedItem>
                        <tnt:NavigationList id="_IDGenNavigationList2">
                            <tnt:NavigationListItem id="_IDGenNavigationListItem13" text="Bar Chart" icon="sap-icon://bar-chart" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem14" selectable="false" href="https://sap.com" target="_blank" text="External Link" icon="sap-icon://attachment" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem15" selectable="false" href="https://sap.com" target="_top" text="External Link _top" icon="sap-icon://attachment" />
                            <tnt:NavigationListItem id="_IDGenNavigationListItem16" text="Compare" icon="sap-icon://compare" />
                        </tnt:NavigationList>
                    </tnt:fixedItem>
                </tnt:SideNavigation>

                <VBox id="_IDGenVBox2">

                    <Panel id="addBookPanel" width="60rem" class="sapUiResponsiveMargin" visible="false">

                        <f:Form id="FormChange354" editable="true">
                            <f:toolbar>
                                <Toolbar id="TB1">
                                    <Title id="Title1" text="Book Deatils"/>
                                    <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                                    <Button id="_IDGenButton2" text="Clear" press="onClearPress"/>
                                    <Button id="_IDGenButton3" text="Save" press="onSavePress"/>
                                </Toolbar>
                            </f:toolbar>
                            <f:layout>
                                <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
                            </f:layout>
                            <f:formContainers>
                                <f:FormContainer id="_IDGenFormContainer">
                                    <f:formElements>
                                        <f:FormElement id="_IDGenFormElement1" label="title">
                                            <f:fields>
                                                <Input id="_IDGenInput" value="{myBookModel>/newBook/title}" />
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement id="_IDGenFormElement2" label="author">
                                            <f:fields>
                                                <Input id="_IDGenInput1" value="{myBookModel>/newBook/author}" />
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement id="_IDGenFormElement3" label="price">
                                            <f:fields>
                                                <Input id="_IDGenInput2" value="{myBookModel>/newBook/price}" />
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement id="_IDGenFormElement4" label="stock">
                                            <f:fields>
                                                <Input id="_IDGenInput3" value="{myBookModel>/newBook/stock}" />
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement id="_IDGenFormElement5" label="location">
                                            <f:fields>
                                                <Input id="_IDGenInput4" value="{myBookModel>/newBook/location}" />
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement id="_IDGenFormElement6" label="gen">
                                            <f:fields>
                                                <Input id="_IDGenInput5" value="{myBookModel>/newBook/gen}" />
                                            </f:fields>
                                        </f:FormElement>
                                    </f:formElements>
                                </f:FormContainer>
                            </f:formContainers>
                        </f:Form>
                    </Panel>

                    <Panel id="viewBookPanel" width="60rem" class="sapUiResponsiveMargin" visible="false">

                        <Table id="idBooksTable" inset="false" items="{
                                path: '/Books',
                                parameters: {
                                $count: true,
                                    $$updateGroupId : 'booksGroup'
                                }
                            }">
                            <headerToolbar>
                                <OverflowToolbar id="_IDGenOverflowToolbar1">
                                    <content>
                                        <Title id="_IDGenTitle" text="Books" level="H2"/>

                                        <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                                        <Button id="addUserButton2" icon="sap-icon://add" tooltip="{i18n>createButtonText}" press=".onCreate" />

                                        <Button id="saveButton" type="Emphasized" text="{i18n>saveButtonText}" enabled="{= ${message>/}.length === 0 &amp;&amp; ${appView>/bookTitleEmpty} === false }" press=".onSave" visible="{appView>/hasUIChanges}"/>
                                        <Button id="doneButton" text="{i18n>cancelButtonText}" press=".onResetChanges"/>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column id="_IDGenColumn1" minScreenWidth="Tablet" demandPopin="true">
                                    <Text id="_IDGenText" text="title" />
                                </Column>
                                <Column id="_IDGenColumn2" minScreenWidth="Tablet" demandPopin="true">
                                    <Text id="_IDGenText1" text="author" />
                                </Column>
                                <Column id="_IDGenColumn3" minScreenWidth="Tablet" demandPopin="true">
                                    <Text id="_IDGenText2" text="price" />
                                </Column>
                                <Column id="_IDGenColumn4" minScreenWidth="Tablet" demandPopin="true">
                                    <Text id="_IDGenText3" text="stock" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem" vAlign="Middle">
                                    <cells>
                                        <Input id="_IDGenText4" value="{title}" valueLiveUpdate="true" liveChange=".onInputChange" />
                                        <Input id="_IDGenText5" value="{author}" valueLiveUpdate="true" liveChange=".onInputChange" />
                                        <Input id="_IDGenText6" value="{price}" valueLiveUpdate="true" liveChange=".onInputChange" />
                                        <Input id="_IDGenText7" value="{stock}" valueLiveUpdate="true" liveChange=".onInputChange" />
                                    </cells>
                                </ColumnListItem>
                            </items>

                        </Table>

                        
                    </Panel>

                </VBox>
            </HBox>
        </VBox>
    </Page>
</mvc:View>